<%- include("header") -%>

<div class="box" id="heading">
	<h1><%= listTitle %></h1>
</div>
<h1 style="text-align:center; color:black;"><%= title %></h1>
<div class="box">
	<% newListItems.forEach(function(newListItem){ %>
	<div class="item">
		<input type="checkbox" />
		<p><%= newListItem %></p>
	</div>

	<% }); %>
	<form class="item" action="/" method="POST">
		<input type="text" name="newItem" placeholder="New Item" autocapitalize="on" autocomplete="off" />
		<button type="submit" name="list" value= <%=listTitle %> >+</button>
	</form>
</div>

<%- include("footer") -%>
